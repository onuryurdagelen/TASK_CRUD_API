@{

}
@model List<Category>

<div class="row my-3">
    <a class="btn btn-info" asp-action="Save">To Add A Category >></a>
</div>

@if (Model.Count < 1)
{
<div class="alert alert-danger" role="alert">
    CATEGORY NOT FOUND.PLEASE ENTER A NEW CATEGORY!
</div>
}
else
{
    <table class="table table-stripped">
        <thead>

            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CreatedDate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>@category.CreateDate</td>
                    <td>
                        @Html.ActionLink("Update", "Update", new { id = category.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = category.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}